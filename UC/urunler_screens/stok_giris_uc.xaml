<UserControl x:Class="WpfApp1.UC.urunler_uc_screens.stok_giris_uc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UC.urunler_uc_screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFF6F6F6">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,150">
            <Label Content=".TXT Dosya Seçimi" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0,0,0,20" FontFamily="Cascadia Code"/>
            <Button x:Name="secim" Width="80" Content="Seç" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="20" FontFamily="Cascadia Code" Click="secim_Click"/>
            <Button x:Name="onay" Width="80" Content="Onayla" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{DynamicResource satiseklebuton}" FontSize="20" Margin="0,20,0,0" Click="onay_Click"/>
        </StackPanel>
    </Grid>
</UserControl>